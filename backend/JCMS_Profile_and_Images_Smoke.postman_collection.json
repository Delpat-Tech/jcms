{
  "info": {
    "name": "JCMS Profile & Images - Minimal Smoke Test",
    "description": "Focused collection for profile changes (username/password) and image size retrieval with high-quality processing.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000/api", "type": "string" },
    { "key": "token", "value": "", "type": "string" },
    { "key": "image_id", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "🔐 Auth",
      "item": [
        {
          "name": "Login (generic user)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const res = pm.response.json();",
                  "  pm.collectionVariables.set('token', res.token);",
                  "  pm.test('Login success', () => pm.expect(res.success).to.be.true);",
                  "} else { pm.test('Login failed', () => pm.expect.fail('Should be 200')); }"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"editor@test.com\",\n  \"password\": \"test123\"\n}" },
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] }
          }
        }
      ]
    },
    {
      "name": "👤 Profile",
      "item": [
        {
          "name": "Change Username",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Username changed', () => {",
                  "  pm.expect(pm.response.code).to.equal(200);",
                  "  const res = pm.response.json();",
                  "  pm.expect(res.success).to.be.true;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"newUsername\": \"profile_user_{{$timestamp}}\"\n}" },
            "url": { "raw": "{{baseUrl}}/profile/change-username", "host": ["{{baseUrl}}"], "path": ["profile", "change-username"] }
          }
        },
        {
          "name": "Change Password",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Password changed', () => {",
                  "  pm.expect(pm.response.code).to.equal(200);",
                  "  const res = pm.response.json();",
                  "  pm.expect(res.success).to.be.true;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"currentPassword\": \"test123\",\n  \"newPassword\": \"newPass{{$timestamp}}\"\n}" },
            "url": { "raw": "{{baseUrl}}/profile/change-password", "host": ["{{baseUrl}}"], "path": ["profile", "change-password"] }
          }
        }
      ]
    },
    {
      "name": "🖼 Images (Quality + Sizes)",
      "item": [
        {
          "name": "Upload Image",
          "event": [
            { "listen": "test", "script": { "exec": [
              "pm.test('Uploaded', () => pm.expect(pm.response.code).to.equal(201));",
              "const res = pm.response.json(); if (res && res.data && res.data._id) pm.collectionVariables.set('image_id', res.data._id);"
            ] } }
          ],
          "request": {
            "method": "POST",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "image", "type": "file", "src": "test-image.jpg" },
                { "key": "title", "type": "text", "value": "Smoke Image" }
              ]
            },
            "url": { "raw": "{{baseUrl}}/images", "host": ["{{baseUrl}}"], "path": ["images"] }
          }
        },
        {
          "name": "Get Size: Thumbnail",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{baseUrl}}/images/{{image_id}}/size/thumbnail", "host": ["{{baseUrl}}"], "path": ["images", "{{image_id}}", "size", "thumbnail"] }
          }
        },
        {
          "name": "Get Size: Medium",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{baseUrl}}/images/{{image_id}}/size/medium", "host": ["{{baseUrl}}"], "path": ["images", "{{image_id}}", "size", "medium"] }
          }
        },
        {
          "name": "Get Size: Large",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{baseUrl}}/images/{{image_id}}/size/large", "host": ["{{baseUrl}}"], "path": ["images", "{{image_id}}", "size", "large"] }
          }
        }
      ]
    }
  ]
}

